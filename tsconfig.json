/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@features/*": [
        "src/app/features/*"
      ],
      "@material/*": [
        "src/app/material/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@utilities/*": [
        "src/app/shared/utilities/*"
      ],
      "@apis/*": [
        "src/app/apis/*"
      ],
      "@models/*": [
        "src/app/types/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@store/*": [
        "src/app/store/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
